{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "origin/main"
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["./packages/**"],
      "linter": {
        "enabled": true,
        "rules": {
          "recommended": true,
          "style": {
            "useConst": "off",
            "noUnusedTemplateLiteral": "off"
          }
        }
      }
    },
    {
      "include": [
        "./apps/site-v2/src/entries.tsx",
        "./apps/site-v2/src/episode-metadata.json",
        "./apps/site-v2/src/rss-feed-data.json"
      ],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
