{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "types": ["react/experimental", "./.wrangler/types/runtime.d.ts"],
    "jsx": "react-jsx",
    "paths": {
      "#/*": ["./src/*"],
      "#utils/*": ["./src/utils/*"],
      "#components/*": ["./src/components/*"],
      "#ui/*": ["./src/components/ui/*"],
      "#lib/*": ["./src/lib/*"],
      "#hooks/*": ["./src/hooks/*"],
      "#episode-metadata": ["./src/episode-metadata.json"]
    }
  }
}
